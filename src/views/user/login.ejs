<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs')%>
  <body>
    <div class="titulo-fufu">
      <i class="fa-solid fa-paintbrush"></i>
      <h1><a href="/">Artistica Fufu</a></h1>
    </div>
    <main class="login">
      <div class="container-login">
        <form action="/login" method="post">
          <div class="title">Login</div>
          <div class="input-box underline">
            <input type="text" placeholder="Ingrese su Email" name="emailRegistro"/>
            <div class="underline"></div>
          </div>
          <% if (locals.error && error.emailRegistro) { %>
            <p><%= error.emailRegistro.msg %></p>
           <% } %>
          <div class="input-box">
            <input type="password" placeholder="Ingrese su ContraseÃ±a" name="passwordRegistro"/>
            <div class="underline"></div>
          </div>
          <% if (locals.error && error.passwordRegistro) { %>
            <p><%= error.passwordRegistro.msg %></p>
           <% } %>
          <div class="input-box button">
            <input type="submit" value="Ingresar"/>
          </div>
          <div class="recordame">
            <input type="checkbox" value="Recordarme" name="rememberme"/> Recordame bb
          </div>
        </form>
        <div class="option">
          No tienes cuenta? <a href="/register">Registrate </a>
        </div>
        <div class="twitter">
          <a href="#"><i class="fa-brands fa-google"></i>Ingresar con Google</a>
        </div>
        <div class="facebook">
          <a href="#"
            ><i class="fa-brands fa-square-facebook"></i>Ingresar con
            Facebook</a>
        </div>
      </div>
    </main>
  </body>
</html>
