<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%> 
    <%- include('../partials/header.ejs') %> 
  <head>
      <title>Product List</title>
      <br>
  </head>
  
  <body>
    <br>
    <br>

    <h1>Listado de productos</h1>
    
    <br>
    <br>
    
    <div class="create-btn">
        <a href="/products/create">Crear producto</a>
    </div>

    <br>
    <br>

      <!-- listado de productos, se agrega todo lo que viene por JSON -->
      <ul>
          <% productsList.forEach(products => { %>
              <li>
                  <div class="product-container">
                      <img class="product-img" src="/images/products/<%= products.image %>">
                      
                      <div class="product-details">
                          <h3 class="product-name">
                              <a href="/products/<%= products.id %>"><%= products.name %></a>
                          </h3>
                          
                          <div class="product-actions">
                              <a class="product-action" href="/products/edit/<%= products.id %>">Editar</a>
                              <a class="product-action" href="/products/delete/<%= products.id %>">Eliminar</a>
                          </div>
                        
                      </div>
                  </div>
              </li>
          <% }) %>
      </ul>

      <br>
      <br>
      <br>
      <br>
  
  </body>
  
  <%- include('../partials/footer.ejs') %> 

</html>
